<!-- Modal -->
<div class="modal fade" id="modal{{idItem}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5 text-dark" id="staticBackdropLabel" style="font-family: Roboto;">Atenção</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-dark" style="font-family: Roboto;">
        Tem certeza que deseja excluir este item?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="font-family: Roboto;">Cancelar</button>
        <a href="/autores/destroy/{{idItem}}" type="button" class="btn btn-danger" style="font-family: Roboto;">Deletar</a>
      </div>
    </div>
  </div>
</div>